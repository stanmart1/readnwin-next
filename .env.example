# Database Configuration (Required)
DATABASE_URL=postgresql://username:password@localhost:5432/readnwin
DB_HOST=localhost
DB_PORT=5432
DB_NAME=readnwin
DB_USER=your_username
DB_PASSWORD=your_password

# SSL Configuration
DB_SSL=false
DB_SSL_REJECT_UNAUTHORIZED=true

# Application
NODE_ENV=development
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-here

# Payment Gateways
RAVE_LIVE_SECRET_KEY=your-flutterwave-secret
RAVE_LIVE_PUBLIC_KEY=your-flutterwave-public
FLUTTER_WAVE_HASH=your-flutterwave-hash

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# File Storage
UPLOAD_DIR=./storage
MAX_FILE_SIZE=50MB